<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/row_element">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="12dp"
            android:layout_marginVertical="4dp">

            <TextView
                android:id="@+id/subject_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/subject_name_txt"
                app:layout_constraintTop_toTopOf="@+id/subject_name_txt" />

            <TextView
                android:id="@+id/subject_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Subject name"
                android:textColor="@color/design_default_color_on_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subject_land_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                app:layout_constraintStart_toStartOf="@+id/subject_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/subject_name_txt" />

            <TextView
                android:id="@+id/subject_ide_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="IDE"
                app:layout_constraintStart_toEndOf="@+id/subject_land_txt"
                app:layout_constraintTop_toBottomOf="@+id/subject_name_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AddLessonActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавление занятия"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер пары:"/>

    <TextView
        android:id="@+id/lesson_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип занятия:"/>

    <TextView
        android:id="@+id/lesson_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Лаб."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата:"/>

    <TextView
        android:id="@+id/lesson_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02.04.2024"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дисциплина:"/>

    <TextView
        android:id="@+id/lesson_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Разработка мобильных приложений"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Группа:"/>

    <TextView
        android:id="@+id/lesson_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1425-САО"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер студ. билета:"/>

    <TextView
        android:id="@+id/lesson_stud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20206969"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оценка:"/>

    <EditText
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Оцените"
        android:minHeight="48dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:text="@string/button_add"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck"
            android:id="@+id/Submit_Button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:text="@string/button_cancel"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck"
            android:id="@+id/Cancel_Button"/>
    </LinearLayout>

</LinearLayout>